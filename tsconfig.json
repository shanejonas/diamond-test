{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "lib": [
        "es2015",
        "dom"
      ],
      "outDir": "build",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "allowJs": true,
      "noEmit": true
    },
    "include": [
      "./src",
      "./artifacts"
    ]
  }
